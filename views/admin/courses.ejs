<!-- views/admin/courses.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Management</title>
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <% include ../partials/adminNavbar.ejs %>
    
    <div class="container">
        <h1>Course Management</h1>
        
        <button id="toggleCourseForm" class="btn btn-primary">Add New Course</button>
        
        <div id="courseFormContainer" style="display: none;">
            <form id="courseForm">
                <input type="hidden" id="courseId">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" id="title" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea id="description" class="form-control" required></textarea>
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" id="price" class="form-control" required>
                </div>
                <button type="submit" class="btn btn-success">Save Course</button>
                <button type="button" id="cancelForm" class="btn btn-secondary">Cancel</button>
            </form>
        </div>
        
        <div id="coursesList">
            <% courses.forEach(course => { %>
                <div class="course-card" data-id="<%= course._id %>">
                    <h3><%= course.title %></h3>
                    <p><%= course.description %></p>
                    <p>Price: $<%= course.price %></p>
                    <div class="course-actions">
                        <button class="btn btn-sm btn-warning edit-btn">Edit</button>
                        <button class="btn btn-sm btn-danger delete-btn">Delete</button>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script src="/js/adminCourses.js"></script>
</body>
</html>