<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Dashboard - Coursey</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <%- include('../partials/adminHeader') %>

  <div class="container mt-5">
    <h1 class="text-center mb-4">Admin Dashboard</h1>

    <div class="row mb-5">
      <!-- Add Course Card -->
      <div class="col-md-4">
        <div class="card border-success shadow-sm">
          <div class="card-body">
            <h5 class="card-title text-success">Add New Course</h5>
            <p class="card-text">Create and publish a new course to the platform.</p>
            <a href="/api/admin/courses/add" class="btn btn-success w-100">Add Course</a>
          </div>
        </div>
      </div>
    </div>

    <h3 class="mb-3">All Courses</h3>

    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% if (courses.length === 0) { %>
        <div class="col">
          <div class="alert alert-warning">No courses available. Please add one.</div>
        </div>
      <% } %>

      <% courses.forEach(course => { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= course.title %></h5>
              <p class="card-text"><%= course.description %></p>
              <div class="d-flex justify-content-between">
                <a href="/api/admin/courses/<%= course._id %>/edit" class="btn btn-outline-primary btn-sm">Edit</a>
                <form action="/api/admin/courses/<%= course._id %>?_method=DELETE" method="POST">
                  <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
